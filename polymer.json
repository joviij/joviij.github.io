{
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "entrypoint": "index.html",
  "shell": "appLoad.js",
  "sources": [
    "src/**.js",
    "assets/**/*",
    "manifest/**",
    "package.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/bundles/**"
  ],
  "builds": [
    {
      "name": "prod",
      "preset": "es6-unbundled",
      "js": {"minify": true},
      "css": {"minify": true}
    },
    {
      "name": "dev",
      "js": {"minify": false, "compile": false},
      "css": {"minify": false},
      "html": {"minify": false},
      "bundle": false,
      "addPushManifest": false
    }
  ]
}
